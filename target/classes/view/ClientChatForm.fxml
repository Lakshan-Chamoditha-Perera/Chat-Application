<AnchorPane fx:id="pane" prefHeight="708.0" prefWidth="431.0" style="-fx-background-color: #DBDBEB;"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.chatapplication.controller.client.ClientChatFormController">
    <children>
        <TextField fx:id="txtMsg" layoutX="11.0" layoutY="638.0" prefHeight="49.0" prefWidth="319.0"
                   promptText="Enter message here" style="-fx-background-color: white;"/>
        <JFXButton layoutX="339.0" layoutY="14.0" onAction="#btnLogoutOnAction" prefHeight="56.0" prefWidth="14.0"
                   style="-fx-background-color: White; -fx-background-radius: 50;" text=" ">
            <graphic>
                <ImageView fitHeight="43.0" fitWidth="36.0" pickOnBounds="true" smooth="false">
                    <image>
                        <Image url="@../assets/logout.png"/>
                    </image>
                </ImageView>
            </graphic>
        </JFXButton>
        <Label layoutX="11.0" layoutY="14.0" prefHeight="56.0" prefWidth="308.0"
               style="-fx-background-color: white; -fx-background-radius: 10;" text="   Rocket Chat" textFill="#8d02b5">
            <font>
                <Font size="30.0"/>
            </font>
        </Label>
        <JFXButton fx:id="btnSend" layoutX="338.0" layoutY="633.0" onAction="#btnSendOnAction" prefHeight="56.0"
                   prefWidth="55.0" style="-fx-background-color: White; -fx-background-radius: 50;" text=" ">
            <graphic>
                <ImageView blendMode="MULTIPLY" fitHeight="40.0" fitWidth="51.0" pickOnBounds="true" smooth="false">
                    <image>
                        <Image url="@../assets/Screenshot_from_2023-05-21_22-32-11-removebg-preview.png"/>
                    </image>
                </ImageView>
            </graphic>
        </JFXButton>
        <ScrollPane layoutX="14.0" layoutY="84.0" prefHeight="525.0" prefWidth="404.0">
            <content>
                <VBox fx:id="vBox" prefHeight="517.0" prefWidth="397.0"/>
            </content>
        </ScrollPane>
        <Button layoutX="287.0" layoutY="647.0" mnemonicParsing="false" onAction="#attachImageOnAction"
                prefHeight="31.0" prefWidth="32.0" style="-fx-background-color: #2980b9; -fx-background-radius: 50;"
                text="+" textFill="WHITE"/>
    </children>
</AnchorPane>
